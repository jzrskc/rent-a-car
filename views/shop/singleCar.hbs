{{# each products }}
  <div class="row row-centered">
    {{# each this }}
      <div class="col-sm-6 col-md-6 col-centered">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">â‚¬{{ this.price }}</div>
                <form class="form-inline pull-right" action="add-to-cart/{{this._id}}" method="get">
                  <div class="input-group">
                    <input type="text" name="numDays" id="{{this._id}}" class="numDays form-control" placeholder="Days" style="width:50px;">
                    <span class="input-group-btn">
                      <button type="submit" name="button" class="btn btn-success" id="bt">Rent-a-Car <i class="fa fa-angle-right"></i></button>
                      <a href="{{ this.links }}" class="btn btn-primary" role="button">Similar</a>
                    </span>
                  </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
