{{# each products }}
  <div class="row row-centered">
    {{# each this }}
      <div class="col-sm-6 col-md-6 col-centered">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">â‚¬{{ this.price }}</div>
              <a href="#" class="btn btn-success pull-right" role="button">Rent-a-Car <i class="fa fa-angle-right"></i></a>
              <a href="{{ this.links }}" class="btn btn-primary pull-right" role="button">Similar</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
